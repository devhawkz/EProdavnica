@page "/proizvod/{id:int}"
@inject IProizvodService ProizvodService

@if(proizvod == null)
{
    <span>Učitavanje proizvoda...</span>
}

else
{
    <div class="media">
        <div class="media-img-wrapper mr-2">
            <img class="media-img" src="@proizvod.SlikaUrl" alt="@proizvod.Naziv" />
        </div>
        <div class="media-body">
            <h2>@proizvod.Naziv</h2>
            <p>@proizvod.Opis</p>
            <h4 class="price">$@proizvod.Cena</h4>
        </div>
    </div>
}
@code {
    private Proizvod? proizvod = null;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        proizvod = ProizvodService.Proizvodi.Find(p => p.Id == Id);
    }
}
